package net.itsrelizc.smp.modsmp.commands;

import org.bukkit.Bukkit;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;

import net.itsrelizc.players.locales.Locale;
import net.itsrelizc.string.ChatUtils;

public class TPAccept implements CommandExecutor {

	@Override
	public boolean onCommand(CommandSender sender, Command command, String label, String[] args) {
		if (args.length < 1) {
			return false;
		}
		
		Player player = (Player) sender;
		Player target = Bukkit.getPlayer(args[0]);
		
		if (target == null) {
			ChatUtils.systemMessage(player, Locale.get(player, "commands.tpa"), "§b" + args[0] + " §c不在线！");
			return true;
		}
		if (!TPACommand.tpas.containsKey(target)) {
			ChatUtils.systemMessage(player, Locale.get(player, "commands.tpa"), "§b" + target.getDisplayName() + " §c没有给你发送任何传送请求！");
			return true;
		}
		
		
		target.teleport(player);
		ChatUtils.systemMessage(player, Locale.get(player, "commands.tpa"), "§a已将 §b" + target.getDisplayName() + " §a传送至您！");
		ChatUtils.systemMessage(target, Locale.get(target, "commands.tpa"), "§b" + player.getDisplayName() + " §a同意了您的传送请求！");
		
		TPACommand.tpas.remove(target);
		
		return true;
	}

}
